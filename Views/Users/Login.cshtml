@model Project_of_Online_Product_Management_System.ViewModels.LoginViewModel
@{
    Layout = null;
}

<html>
<head>
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/loginStyle.css" rel="stylesheet" />
</head>
<body>


    <img class="wave" src="~/img/Login/wave.png" />

    <div class="container">
        <div class="img">

            <img src="~/img/Login/undraw_exams_g4ow.svg" />
        </div>
        <div class="login-content">

            <form asp-action="Login" asp-controller="Users" method="post">
                <img src="~/img/Login/undraw_profile_pic_ic5t.png" />
                <h2 class="title">Welcome</h2>

                <div class="input-div one">

                    <div class="i">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="div">
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <h5>Email</h5>
                        <input type="text" asp-for="Email" class="input">
                    </div>
                </div>
                <div class="input-div pass">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="div">
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <h5>Password</h5>
                        <input type="password" asp-for="Password" class="input">
                    </div>
                </div>

                <input type="submit" class="btn" value="Login">
                <a asp-controller="Users" asp-action="Create" class="btn btn-primary">Registration</a>
            </form>

        </div>
    </div>
    <script src="https://kit.fontawesome.com/712cb7ccea.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <script>
        const inputs = document.querySelectorAll(".input");


        function addcl() {
            let parent = this.parentNode.parentNode;
            parent.classList.add("focus");
        }

        function remcl() {
            let parent = this.parentNode.parentNode;
            if (this.value == "") {
                parent.classList.remove("focus");
            }
        }


        inputs.forEach(input => {
            input.addEventListener("focus", addcl);
            input.addEventListener("blur", remcl);
        });

    </script>
</body>
</html>