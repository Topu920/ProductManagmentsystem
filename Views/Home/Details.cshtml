@model Project_of_Online_Product_Management_System.ViewModels.ProductsViewModels

@{
    ViewData["Title"] = "Details";
    var photoPath = "~/img/" + (Model.PhotoPathOfProduct ?? "images.jpg");
}

<h1>Details</h1>

<div>
    <h4>Products</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductDetails)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductDetails)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhotoPathOfProduct)
        </dt>
        <dd class="col-sm-10">
            <img class="card-img-top mb-2 imageThumbnail" style="width: auto" src="@photoPath" asp-append-version="true">
        </dd>

    </dl>
    <a asp-controller="Home" asp-action="Order" asp-route-id="@Model.Id" class="btn btn-primary">Order</a>

    <form enctype="multipart/form-data" asp-controller="Home" asp-action="Details"
          method="post" class="mt-3">

        <div class="form-group row">
            <label asp-for="Comments" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="Comments" class="form-control" placeholder="Say something about products"></textarea>


            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Comment</button>
            </div>
        </div>


    </form>
</div>
