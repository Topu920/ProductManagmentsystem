@model Project_of_Online_Product_Management_System.ViewModels.ProductEditViewModel

@{
    ViewData["Title"] = "Edit Employee";
    var existingPhoto = "~/img/" + (Model.ExistingPhotoPath ?? "images.jpg");
}

<h1 class="m-3">Update Employee</h1>
<form enctype="multipart/form-data" asp-controller="Products" asp-action="Edit" method="post" class="border border-warning rounded bg-light m-3">
    <div class="m-3">

        <input asp-for="Id" hidden />
        <input asp-for="ExistingPhotoPath" hidden />

        <div class="form-group row">
            <label asp-for="ProductCode" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ProductCode" class="form-control" placeholder="Name">
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ProductName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ProductName" class="form-control" placeholder="Name">
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ProductDetails" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ProductDetails" class="form-control" placeholder="Email">
                <span asp-validation-for="ProductDetails" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="FreezeProduct" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="FreezeProduct" class="custom-select mr-sm-2">
                    <option value="">Please Select</option>
                    <option value="1">Yes</option>
                    <option value="2">NO</option>
                </select>
                <span asp-validation-for="FreezeProduct" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group ">
            <label asp-for="ProductPhoto"></label>
            <div class="custom-file">
                <input asp-for="ProductPhoto" class="form-control custom-file-input">
                <label class="custom-file-label">Click Here Change Photo</label>
            </div>
        </div>

        <div class=" row col-sm-4 offset-4">
            <img src="@existingPhoto" class="imageThumbnail" asp-append-version="true" style="height:300px;width:250px " />
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <button type="submit" class="btn btn-warning">Update</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-info">Cancel</a>
    </div>

    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>

    }
</form>

