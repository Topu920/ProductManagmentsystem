@model Project_of_Online_Product_Management_System.ViewModels.CreateProductViewModel

@{
    ViewBag.Title = "Create Products";
}


<form enctype="multipart/form-data" asp-controller="Products" asp-action="Create"
      method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="ProductCode" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ProductCode" class="form-control" placeholder="Name">
            <span asp-validation-for="ProductCode" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ProductName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ProductName" class="form-control" placeholder="Product Name">
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ProductDetails" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ProductDetails" class="form-control" placeholder="Product Details">
            <span asp-validation-for="ProductDetails" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="FreezeProduct" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="FreezeProduct" class="custom-select mr-sm-2">
                <option value="">Please Select</option>
                <option value="1">Yes</option>
                <option value="2">NO</option>
            </select>
            <span asp-validation-for="FreezeProduct" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ProductPhoto" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="ProductPhoto" class="form-control custom-file-input">
                <label class="custom-file-label">Choose File...</label>
            </div>
        </div>
    </div>



    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>

    }

</form>

